<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#00a651">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển đổi năm dương lịch"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#006400"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- Input Field for Năm dương lịch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm dương lịch:"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/editnamduonglich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="2013"
            android:layout_weight="2"
            android:inputType="number"/>
    </LinearLayout>

    <!-- Chuyển đổi Button -->
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển đổi"
        android:background="#d3d3d3"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <!-- Result Display for Năm âm lịch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#FFFF00">

        <TextView
            android:id="@+id/textViewKetQuaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm âm lịch:"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textViewKetQua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quý Tỵ"
            android:textColor="#000000"
            android:layout_weight="2"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
