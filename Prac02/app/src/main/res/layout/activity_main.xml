<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- TextView để hiển thị kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Result!"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- EditText cho nhập Staff ID -->
    <EditText
        android:id="@+id/etStaffId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff id"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <!-- EditText cho nhập Full Name -->
    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff full name"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <!-- EditText cho nhập ngày sinh -->
    <EditText
        android:id="@+id/etBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birth date"
        android:inputType="date"
        android:layout_marginBottom="20dp" />

    <!-- EditText cho nhập mức lương -->
    <EditText
        android:id="@+id/etSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salary"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- Button để thêm nhân viên -->
    <Button
        android:id="@+id/btnAddStaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add New Staff"
        android:textColor="@android:color/white" />
</LinearLayout>
