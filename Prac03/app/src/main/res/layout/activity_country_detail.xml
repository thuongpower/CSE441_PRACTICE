<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/country_flag_detail"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/india_flag"
        android:contentDescription="Country Flag" />

    <TextView
        android:id="@+id/country_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="India"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/country_capital_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital: New Delhi"
        android:textSize="18sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/country_population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Population: 1,428.6 million"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/country_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area: 2,973,190 Km²"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/country_density"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Density: 481 people/Km²"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/country_world_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World Share: 17.76%"
        android:textSize="16sp"
        android:paddingTop="8dp" />
</LinearLayout>
